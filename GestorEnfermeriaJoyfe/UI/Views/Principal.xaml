<UserControl x:Class="GestorEnfermeriaJoyfe.UI.Views.Principal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fIcons="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:vm="clr-namespace:GestorEnfermeriaJoyfe.UI.ViewModels"
             xmlns:local="clr-namespace:GestorEnfermeriaJoyfe.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel Margin="0,10,0,0">


            <StackPanel Orientation="Horizontal" Margin="0,0,20,0" HorizontalAlignment="Right">

                <!-- Botón Azul -->
                <Button Style="{StaticResource actionPacienteBtn}"
                      Tag="{StaticResource white}"
                      Background="Blue"
                      Command="{Binding CreatePacienteCommand}"
                      Margin="15,0,0,0" Width="121">
                    <StackPanel Orientation="Horizontal" Width="97">
                        <fIcons:IconImage Icon="PlusCircle" Style="{StaticResource iconActionPacienteBtn}" />
                        <TextBlock Text="Nuevo" Style="{StaticResource textActionPacienteBtn}" Width="85" Height="14"/>
                    </StackPanel>
                </Button>

                <!-- Botón Naranja -->
                <Button Style="{StaticResource actionPacienteBtn}"
                        Tag="{StaticResource tempHover}"
                        Background="Orange"
                        Command="{Binding EditPacienteCommand}"
                        Margin="15,0,0,0" Height="43" Width="121" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">   
                        <fIcons:IconImage Icon="Edit" Style="{StaticResource iconActionPacienteBtn}" />
                        <TextBlock Text="Editar" Style="{StaticResource textActionPacienteBtn}" Height="14" Width="67"/>
                    </StackPanel>
                </Button>


                <!-- azul clarito -->
                <Button Style="{StaticResource actionPacienteBtn}"
                        Tag="{StaticResource tempHover}"
                        Background="{StaticResource color6}"
                        Command="{Binding DeletePacienteCommand}"
                        Margin="15,0,0,0" Height="45" Width="139">
                    <StackPanel Orientation="Horizontal" Width="119">
                        <fIcons:IconImage Icon="FileCirclePlus" Style="{StaticResource iconActionPacienteBtn}" />
                        <TextBlock Text="Plantilla visita" Style="{StaticResource textActionPacienteBtn}" Width="90" Height="14"/>
                    </StackPanel>
                </Button>


                <!-- Botón Rojo -->
                <Button Style="{StaticResource actionPacienteBtn}"
            Tag="{StaticResource tempHover}"
            Background="{StaticResource red}"
            Command="{Binding DeletePacienteCommand}"
            Margin="15,0,0,0" Height="45" Width="121">
                    <StackPanel Orientation="Horizontal" Width="97">
                        <fIcons:IconImage Icon="Trash" Style="{StaticResource iconActionPacienteBtn}" />
                        <TextBlock Text="Eliminar" Style="{StaticResource textActionPacienteBtn}" Width="81" Height="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>






            <!-- Citas -->
            <Label Content="Citas: "
                   Foreground="{StaticResource color9}" 
                   FontSize="34" 
                   FontWeight="Bold"
                   FontFamily="Monserrat"
                   Padding="0,8,0,0" Height="58"/>

            <!-- DataGrid para mostrar los datos citas -->
            <Border Background="{StaticResource temptable1}"
                    Padding="30"
                    CornerRadius="10"
                    BorderBrush="{StaticResource white}"
                    BorderThickness="2"
                    Margin="15,20,20,0">

                <DataGrid ItemsSource="{Binding FilteredPacientesView}"
                          SelectedItem="{Binding SelectedPaciente}"
                          AutoGenerateColumns="False"
                          ColumnWidth="*"
                          Background="{StaticResource temptable1}"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionUnit="FullRow"
                          IsReadOnly="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource color9}"/>
                            <Setter Property="Padding" Value="2,0,0,10"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="{StaticResource color8.5}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>


                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding HasVisit.ToCheckString }" Header="Visita"/>
                        <DataGridTextColumn Binding="{Binding Date.ToTime }" Header="Hora" HeaderStringFormat=""/>
                        <DataGridTextColumn Binding="{Binding Note.Value }" Header="Nota"/>
                        <DataGridTextColumn Binding="{Binding PatientInfos.value }" Header="Paciente"/>


                    </DataGrid.Columns>
                </DataGrid>
            </Border>




            <!-- Citas -->
            <Label Content="Visitas: "
                   Foreground="{StaticResource color9}" 
                   FontSize="34" 
                   FontWeight="Bold"
                   FontFamily="Monserrat"
                   Margin="0 15 0 0"
                   Padding="0,8,0,0" Height="58"/>


            <!-- Segundo DataGrid -->
            <Border Background="{StaticResource temptable1}"
                    Padding="30"
                    CornerRadius="10"
                    BorderBrush="{StaticResource white}"
                    BorderThickness="2"
                    Margin="15,20,20,0">

                <DataGrid ItemsSource="{Binding FilteredPacientesView}"
                          SelectedItem="{Binding SelectedPaciente}"
                          AutoGenerateColumns="False"
                          ColumnWidth="*"
                          Background="{StaticResource temptable1}"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionUnit="FullRow"
                          IsReadOnly="True">


                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource color9}"/>
                            <Setter Property="Padding" Value="2,0,0,10"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="{StaticResource color8.5}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding }" Header="Tipo"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Clasificación"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Comunicado"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Derivado"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Trauma"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Lugar"/>
                        <DataGridTextColumn Binding="{Binding }" Header="Descripción"/>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>



            <!--<StackPanel Orientation="Horizontal" Margin="0,0,20,0" HorizontalAlignment="Right">

                --><!-- azul clarito --><!--
                <Button Style="{StaticResource actionPacienteBtn}"
                        Tag="{StaticResource tempHover}"
                        Background="{StaticResource color6}"
                        Command="{Binding DeletePacienteCommand}"
                        Margin="15,0,0,0" Height="45" Width="139">
                    <StackPanel Orientation="Horizontal" Width="119">
                        <fIcons:IconImage Icon="FileCirclePlus" Style="{StaticResource iconActionPacienteBtn}" />
                        <TextBlock Text="Plantilla visita" Style="{StaticResource textActionPacienteBtn}" Width="90" Height="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>-->
        </StackPanel>
    </Grid>
</UserControl>
