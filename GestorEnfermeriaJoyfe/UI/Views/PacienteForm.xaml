<Window x:Class="GestorEnfermeriaJoyfe.UI.Views.PacienteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:viewmodel="clr-namespace:GestorEnfermeriaJoyfe.UI.ViewModels" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:Components="clr-namespace:GestorEnfermeriaJoyfe.UI.Components"
        Title="Paciente" Height="400" Width="300">
    <StackPanel Margin="10">

        <Components:FormGroup x:Name="txtNombre" LabelText="Nombre"/>
        <Components:FormGroup x:Name="txtApellido1" LabelText="Apellido 1"/>
        <Components:FormGroup x:Name="txtApellido2" LabelText="Apellido 2"/>
        <Components:FormGroup x:Name="txtCurso" LabelText="Curso"/>

        <Button Margin="20,10,20,0" 
                Content="Aceptar" 
                IsDefault="True" 
                Click="AceptarButton_Click"
                Style="{StaticResource actionPacienteBtn}"
                Background="{StaticResource color9}"/>
        
    </StackPanel>
</Window>

